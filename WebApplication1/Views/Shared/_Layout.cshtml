<!DOCTYPE html>

@model WebApplication1.Models.Signup

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - Naif_Project</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all">
    <link rel="icon" type="image/png" href="~/image/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/main.css">
    
    <script>
        $(document).ready(function () {
        $("#username").val('@Session["username"]');
        $("#password").val('@Session["password"]');
            
        $("#warning").css("display", "none");
        $(".re-password").keyup(function () {
            if ($(".password").val() != $(".re-password").val()) {
                $("#warning").css("display", "inline-block");
            }
            else {
                $("#warning").css("display", "none");
            }
        });
    });
    </script>
    <style>
        .customlogin {
            width: 100%;
            min-height: 100vh;
            display: -webkit-box;
            display: -webkit-flex;
            display: -moz-box;
            display: -ms-flexbox;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            padding: 15px;
        }

        .custom {
            background: url('http://localhost:2231/images/back.jpg') no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
    </style>
</head>

<body class="custom">
    <div class="limiter">
        <div class="customlogin">

            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        });
    </script>
    <script src="~/Scripts/main.js"></script>    
</body>

</html>
